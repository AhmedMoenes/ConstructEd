@model ConstructEd.ViewModels.CourseContentViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "_Layout"; // Ensure layout is explicitly set
}

<h1>Details</h1>

<div>
    <h4>CourseContent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Id"></label>
        </dt>
        <dd class="col-sm-10">
            <span>@Model.Id</span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Title"></label>
        </dt>
        <dd class="col-sm-10">
            <span>@Model.Title</span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Type"></label>
        </dt>
        <dd class="col-sm-10">
            <span>@Model.Type</span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="FileUrl"></label>
        </dt>
        <dd class="col-sm-10">
            <span>@Model.FileUrl</span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Order"></label>
        </dt>
        <dd class="col-sm-10">
            <span>@Model.Order</span>
        </dd>
        <dt class="col-sm-2">
            Course Name
        </dt>
        <dd class="col-sm-10">
            <span>@ViewBag.CourseName</span> <!-- Using ViewBag -->
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>