@model List<CourseViewModel>
@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

@foreach (var course in Model)
{
    <div class="card" style="width:300px">
        <div class="card-body">
            <h4 class="card-title">@course.Title</h4>
            <p class="card-text">Duration = @course.Duration</p>
            <p class="card-text">Price = @course.Price</p>
            <p class="card-text">Instructor = @course.InstructorId</p>

            <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-success">View Details</a>

            <form asp-action="AddToCart" asp-controller="ShoppingCart" method="post">
                <input type="hidden" name="id" value="@course.Id" />
                <input type="hidden" name="type" value="Course" />
                <button type="submit" class="btn btn-danger">Add To Cart</button>
            </form>

            <form asp-action="AddToWish" asp-controller="WishList" method="post" class="wish-form">
                <input type="hidden" name="id" value="@course.Id" />
                <input type="hidden" name="type" value="Course" />
                <button type="submit" class="wish-button">
                    <i class="@(course.IsInWishlist ? "fas" : "far") fa-heart"></i> 
                </button>
            </form>
        </div>
    </div>
}
<style>
    .wish-button {
        font-size: 24px;
        background: none;
        border: none;
        cursor: pointer;
        transition: color 0.3s ease-in-out;
    }

    .wish-button i {
        color: gray; /* Default unselected heart color */
    }

    .wish-button .fas {
        color: red !important; /* Make filled heart red */
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".wish-form").on("submit", function (event) {
            event.preventDefault(); // Prevent default submission

            let form = $(this);
            let icon = form.find("i");

            $.post(form.attr("action"), form.serialize(), function (response) {
                if (response.success) {
                    icon.toggleClass("far fas");
                    icon.toggleClass("text-danger");
                } else {
                    alert("Failed to add to wishlist!");
                }
            }).fail(function () {
                alert("An error occurred!");
            });
        });
    });
</script>