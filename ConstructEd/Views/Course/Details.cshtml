@model CourseDetailsViewModel

@{
    ViewData["Title"] = "Course Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <!-- Main Content -->
        <div class="col-md-8">
            <!-- Course Title -->
            <h1 class="display-4 mb-4">@Model.Title</h1>

            <!-- Overview -->
            <div class="card mb-4 shadow">
                <div class="card-body">
                    <h2 class="card-title text-primary mb-3">Overview</h2>
                    <p class="card-text lead">@Model.Description</p>
                </div>
            </div>

           <!-- Course Content -->
<div class="card mb-4 shadow">
    <div class="card-body">
        <h2 class="card-title text-primary mb-3">Course Content</h2>
        <ul class="list-group list-group-flush">
                        @if (ViewBag.courseContents != null)
                        {
                            foreach (var content in ViewBag.courseContents)
                            {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a asp-controller="CourseContent" asp-action="Details" asp-route-id="@content.Id" class="text-decoration-none text-dark flex-grow-1">
                                    <span>@content.Title</span>
                                </a>
                                <span class="badge bg-secondary rounded-pill">@content.Type</span>
                            </li>
                            }
                        }
                        else
                        {
                    <li class="list-group-item">No content available for this course.</li>
                        }
        </ul>
    </div>
</div>
        </div>
    </div>
</div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-4">Course Details</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Price:</strong>
                            <span id="totalPrice" class="badge bg-primary rounded-pill">@Model.Price.ToString("C")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Duration:</strong>
                            <span class="badge bg-primary rounded-pill">@Model.Duration hours</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Category:</strong>
                            <span class="badge bg-primary rounded-pill">@Model.Category</span>
                        </li>
                    </ul>
                    <div class="d-grid mt-4">
                        @if (Model.IsEnrolled)
                        {
                           
                            <button class="btn btn-success" disabled>Enrolled</button>
                        }
                        else
                        {
                            
                            <button type="button" class="btn btn-primary" id="buyNowButton" data-id="@Model.Id">
                                Buy Now
                            </button>
                            <form class="cart-form" data-courseid="@Model.Id" data-incart="@(Model.IsInCart ? "true" : "false" )">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="hidden" name="type" value="Course" />
                                <button type="submit" class="cart-button">
                                    <i class="@(Model.IsInCart ? "fas fa-shopping-cart" : "fas fa-cart-plus")"></i>
                                </button>
                            </form>

                            <form class="wish-form" data-courseid="@Model.Id" data-inwishlist="@(Model.IsInWishlist ? "true" : "false")">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="hidden" name="type" value="Course" />
                                <button type="submit" class="wish-button">
                                    <i class="@(Model.IsInWishlist ? "fas" : "far") fa-heart"></i>
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include the Payment Modal Partial View -->
@{
    var paymentViewModel = new PaymentViewModel { Amount = Model.Price };
}
<partial name="_PaymentModal" model="paymentViewModel" />

<style>
    .cart-button, .wish-button {
        font-size: 24px;
        background: none;
        border: none;
        cursor: pointer;
        transition: color 0.3s ease-in-out;
    }

        .cart-button i, .wish-button i {
            color: gray;
            transition: color 0.3s ease-in-out;
        }

        .cart-button .fas {
            color: green !important;
        }

        .wish-button .fas {
            color: red !important;
        }
</style>

@section Scripts {

    <!-- Ensure jQuery is loaded -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Ensure Bootstrap JS is loaded -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Validation Scripts -->
    <script src="~/js/paymentValidation.js" asp-append-version="true"></script>

	<script src="~/js/CourseDetailsWishingListandShoppingCart.js"></script>
           
}
