@model ConstructEd.ViewModels.CourseReviewViewModel

@{
    ViewData["Title"] = "Add Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="review-container">
    <div class="card add-review-card">
        <h3 class="text-center mb-4">Add Review</h3>

        <form asp-action="AddReview" asp-controller="Course" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <input asp-for="CourseId" type="hidden" />

            <!-- Rating Input -->
            <div class="mb-3">
                <label asp-for="Rating" class="form-label"></label>
                <select asp-for="Rating" class="form-control input-custom">
                    <option value="">Select Rating</option>
                    <option value="1">1 Star</option>
                    <option value="2">2 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="5">5 Stars</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <!-- Comment Input -->
            <div class="mb-3">
                <label asp-for="Comment" class="form-label"></label>
                <textarea asp-for="Comment" class="form-control input-custom" rows="4"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn-submit">Submit Review</button>
            </div>
        </form>

        <!-- Back Link -->
        <div class="text-center mt-4">
            <a asp-action="CourseContentDetails" asp-controller="Admin" asp-route-id="@Model.CourseId" class="back-link">Back to Course</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}