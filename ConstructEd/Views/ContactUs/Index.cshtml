@model ConstructEd.ViewModels.ContactFormViewModel

@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contact Section -->
<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2>Contact Us</h2>
                <p>
                    Have questions or need assistance? We're here to help! Fill out the form below, and we'll get back to you as soon as possible.
                </p>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-8 mx-auto">
                <div class="contact-form">
                    <form asp-action="Index" asp-controller="ContactUs" method="post">
                        <!-- Name Field -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Your Name</label>
                            <input asp-for="Name" class="form-control form-control-custom" placeholder="Enter your name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Your Email</label>
                            <input asp-for="Email" class="form-control form-control-custom" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Subject Field -->
                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label">Subject</label>
                            <input asp-for="Subject" class="form-control form-control-custom" placeholder="Enter the subject" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <!-- Message Field -->
                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">Your Message</label>
                            <textarea asp-for="Message" class="form-control form-control-custom" rows="5" placeholder="Enter your message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn-submit">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
}