@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Custom Styles */
    .contact-section {
        background-color: #1b1535;
        color: #fff;
        padding: 60px 0;
    }

    .contact-section h2 {
        color: #6f42c1;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .contact-section p {
        font-size: 1.1rem;
        line-height: 1.8;
    }

    .contact-form {
        background-color: #0c081f;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .form-control-custom {
        background-color: transparent;
        border: 1px solid #5b4b8a;
        color: #fff;
        border-radius: 5px;
        padding: 10px;
    }

        .form-control-custom:focus {
            border-color: #7663c1;
            box-shadow: none;
            outline: none;
        }

    .btn-submit {
        background: linear-gradient(90deg, #6f42c1, #aa2068);
        border: none;
        padding: 10px 20px;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        transition: 0.3s ease;
    }

        .btn-submit:hover {
            background: linear-gradient(90deg, #502ea7, #881856);
            transform: scale(1.02);
        }
</style>

<!-- Contact Section -->
<div class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2>Contact Us</h2>
                <p>
                    Have questions or need assistance? We're here to help! Fill out the form below, and we'll get back to you as soon as possible.
                </p>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-8 mx-auto">
                <div class="contact-form">
                    <form asp-action="Contact" method="post">
                        <!-- Name Field -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control form-control-custom" id="name" name="name" placeholder="Enter your name" required />
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Your Email</label>
                            <input type="email" class="form-control form-control-custom" id="email" name="email" placeholder="Enter your email" required />
                        </div>

                        <!-- Subject Field -->
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control form-control-custom" id="subject" name="subject" placeholder="Enter the subject" required />
                        </div>

                        <!-- Message Field -->
                        <div class="mb-3">
                            <label for="message" class="form-label">Your Message</label>
                            <textarea class="form-control form-control-custom" id="message" name="message" rows="5" placeholder="Enter your message" required></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn-submit">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}