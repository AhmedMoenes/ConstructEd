@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        
    <!-- Main Content -->
        <div class="col-md-9 p-4">
            <h1 class="display-4 mb-4">Welcome to Admin Dashboard</h1>

    <!-- Courses Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Courses</h3>
                </div>
                <div class="card-body">
                    <a asp-controller="Course" asp-action="Index" class="btn btn-outline-primary me-2">View Courses</a>
                    <a asp-controller="Course" asp-action="Create" class="btn btn-outline-success">Create Course</a>
                    <a asp-controller="CourseContent" asp-action="Create" class="btn btn-outline-success">Add Content</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Plugins Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title">Plugins</h3>
                </div>
                <div class="card-body">
                    <a asp-controller="Plugin" asp-action="Index" class="btn btn-outline-primary me-2">View Plugins</a>
                    <a asp-controller="Plugin" asp-action="Create" class="btn btn-outline-success">Create Plugin</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Instructors Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title">Instructors</h3>
                </div>
                <div class="card-body">
                    <a asp-controller="Instructor" asp-action="Index" class="btn btn-outline-primary me-2">View Instructors</a>
                    <a asp-controller="Instructor" asp-action="Create" class="btn btn-outline-success">Add Instructor</a>
                </div>
            </div>
        </div>
    </div>
</div>
