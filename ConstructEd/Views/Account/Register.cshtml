@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

        <style>
            .input-custom {
                background-color: transparent;
                border: 1px solid #5b4b8a;
                color: #fff;
                border-radius: 5px;
                padding: 10px;
            }

                .input-custom:focus {
                    border-color: #7663c1;
                    box-shadow: none;
                    outline: none;
                }

            .btn-signin {
                border: none;
                padding: 10px;
                color: #fff;
                font-weight: bold;
                border-radius: 5px;
                transition: 0.3s ease;
            }

                .btn-signin:hover {
                    background: linear-gradient(90deg, #502ea7, #881856);
                    transform: scale(1.02);
                }
        </style>

        <div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #0c081f;">
            <div class="card shadow-lg p-4 rounded-4" style="background-color: #1b1535; color: #fff; width: 400px;">
                <h3 class="text-center mb-4">Create an Account</h3>

                <form asp-action="Register" asp-controller="Account" method="post">
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control input-custom" required>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control input-custom" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control input-custom" required>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control input-custom" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmedPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmedPassword" type="password" class="form-control input-custom" required>
                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-signin w-100">Register</button>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Login" asp-controller="Account" class="text-decoration-none" style="color: #5998ff;">Already have an account? Sign in</a>
                </div>
            </div>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
            <partial name="_ValidationScriptsPartial" />
        }
