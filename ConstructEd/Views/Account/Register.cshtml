@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Register Section -->
<section class="auth-section">
    <div class="container">
        <div class="auth-card">
            <h3 class="text-center mb-4">Create a New Account</h3>

            <form asp-action="Register" asp-controller="Account" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }

                <!-- Full Name Input -->
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control input-custom" placeholder="Enter your full name" required aria-label="Full Name">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email Input -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control input-custom" placeholder="Enter your email" required aria-label="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Phone Number Input -->
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control input-custom" placeholder="Enter your phone number" required aria-label="Phone Number">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control input-custom" placeholder="Enter your password" required aria-label="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password Input -->
                <div class="mb-3">
                    <label asp-for="ConfirmedPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmedPassword" type="password" class="form-control input-custom" placeholder="Confirm your password" required aria-label="Confirm Password">
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                </div>

                <!-- Register Button -->
                <div class="text-center">
                    <button type="submit" class="btn-auth">Register</button>
                </div>

                <!-- Login Link -->
                <div class="text-center mt-4">
                    <p>Already have an account? <a asp-action="Login" class="auth-link">Login here</a></p>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}