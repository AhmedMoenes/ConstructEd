@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Input Fields */
    .input-custom {
        background-color: transparent;
        border: 1px solid #5b4b8a;
        color: #fff;
        border-radius: 5px;
        padding: 10px;
    }

        .input-custom:focus {
            border-color: #7663c1;
            box-shadow: none;
            outline: none;
        }

    /* Register Button */
   /* Create Account Button (New Dark Purple Theme) */
    .btn-create-account {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 15px 38px;
        border-radius: 16px;
        border: 1px solid transparent;
        color: #ffffff;
        background: linear-gradient(90deg, #5B4B8A, #7663C1);
        font-size: 16px;
        letter-spacing: 1px;
        transition: all 0.2s ease-in-out;
        text-decoration: none;
    }

        .btn-create-account:hover {
            background: rgba(193, 158, 224, 0.1);
            border-color: #C19EE0;
            color: #C19EE0;
            transform: translateY(-4px) scale(1.05);
        }

        .btn-create-account:active {
            background-color: transparent;
            border-color: #C19EE0;
            color: #C19EE0;
            transform: translateY(4px) scale(0.95);
        }

        .btn-create-account:disabled {
            background-color: rgba(255, 255, 255, 0.16);
            color: #8E8E93;
            border-color: #8E8E93;
        }

    /* Alert Box */
    div.alert-danger {
        background-color: rgba(0, 0, 0, 0) !important;
        color: #fff !important;
        border: 1px solid #881856 !important;
    }
</style>


<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #0c081f;">
    <div class="card shadow-lg p-4 rounded-4" style="background-color: #1b1535; color: #fff; width: 420px;">
        <h3 class="text-center mb-4">Create a New Account</h3>

        <form asp-action="Register" asp-controller="Account" method="post">

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control input-custom" placeholder="Enter your full name" required>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control input-custom" placeholder="Enter your email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control input-custom" placeholder="Enter your phone number" required>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control input-custom" placeholder="Enter your password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmedPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmedPassword" type="password" class="form-control input-custom" placeholder="Confirm your password" required>
                <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
            </div>

            <div class="text-center">
            <a asp-action="Register" asp-controller="Account" class="btn-create-account">Register</a>
        </div>

            <div class="text-center mt-4">
                <p>Already have an account? <a asp-action="Login" class="text-decoration-none" style="color: #5998ff;">Login here</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}