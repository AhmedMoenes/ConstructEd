@model InstructorViewModel

@{
    ViewData["Title"] = "AddInstructor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddInstructor</h1>

<style>
    /* Input Fields */
    .input-custom {
        background-color: transparent;
        border: 1px solid #5b4b8a;
        color: #fff;
        border-radius: 5px;
        padding: 10px;
    }

        .input-custom:focus {
            border-color: #7663c1;
            box-shadow: none;
            outline: none;
        }

    /* Register Button */
    .btn-register {
        background: linear-gradient(90deg, #6f42c1, #aa2068);
        border: none;
        padding: 10px;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        transition: 0.3s ease;
    }

        .btn-register:hover {
            background: linear-gradient(90deg, #502ea7, #881856);
            transform: scale(1.02);
        }

    /* Alert Box */
    div.alert-danger {
        background-color: rgba(0, 0, 0, 0) !important;
        color: #fff !important;
        border: 1px solid #881856 !important;
    }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #0c081f;">
    <div class="card shadow-lg p-4 rounded-4" style="background-color: #1b1535; color: #fff; width: 420px;">
        <h3 class="text-center mb-4">Create a New Account</h3>

        <form asp-action="AddInstructor" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control input-custom" placeholder="Enter your full name" required>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control input-custom" placeholder="Enter your email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control input-custom" placeholder="Enter your phone number" required>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control input-custom" placeholder="Enter your password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmedPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmedPassword" type="password" class="form-control input-custom" placeholder="Confirm your password" required>
                <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
            </div>
            <!-- Profile Information -->
             <div class="mb-3">
                 <label asp-for="Bio" class="control-label"></label>
                 <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                 <span asp-validation-for="Bio" class="text-danger"></span>
             </div>

             <div class="mb-3">
                 <label asp-for="ProfilePicture" class="control-label"></label>
                 <input asp-for="ProfilePicture" class="form-control" placeholder="https://example.com/profile.jpg" />
                 <span asp-validation-for="ProfilePicture" class="text-danger"></span>
             </div>


            <div class="d-grid">
                <button type="submit" class="btn-register">Add</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}