@model LoginViewModel

@{
    ViewData["Title"] = "Sign In";
}

<!-- Sign In Section -->
<section class="auth-section">
    <div class="container">
        <div class="auth-card">
            <h3 class="text-center mt-3">Sign In</h3>

            <form asp-action="Login" asp-controller="Account" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }

                <!-- Email Input -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control input-custom" required aria-label="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control input-custom" required aria-label="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="form-check mb-3">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>

                <!-- Sign In Button -->
                <button type="submit" class="btn-auth">Log In</button>

                <!-- Forgot Password Link -->
                <div class="text-center mt-3">
                    <a asp-action="ForgotPassword" asp-controller="Account" class="auth-link">Forgot password?</a>
                </div>
            </form>

            <hr class="mt-4 mb-3 border-secondary">

            <!-- Create Account Button -->
            <div class="text-center">
                <p class="mb-4">Don't have an account?</p>
                <a asp-action="Register" asp-controller="Account" class="btn-auth">Create an account</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}