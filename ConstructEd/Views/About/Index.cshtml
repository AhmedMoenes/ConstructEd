@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- About Section -->
<section class="about-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2>About Us</h2>
                <p>
                    Welcome to ConstructEd, your premier destination for online learning and professional development.
                    We are dedicated to providing high-quality courses and resources to help you achieve your goals.
                    Whether you're a beginner or an expert, our platform offers something for everyone.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Mission Section -->
<section class="mission-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2>Our Mission</h2>
                <p>
                    Our mission is to empower individuals through education. We believe that everyone deserves access
                    to high-quality learning resources, regardless of their background or location. Join us on this
                    journey to unlock your full potential.
                </p>
            </div>
        </div>
    </div>
</section>

