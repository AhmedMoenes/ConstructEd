                     <path d="m18 0 8 12 10-8-4 20H4L0 4l10 8 8-12z"></path>
                 </svg>
                 View Plan
             </a>
         </div>
     </div>
 </nav>


    <!-- Main Content with Extra Space -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

