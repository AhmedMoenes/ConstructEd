@{
    ViewData["Title"] = "Home Page";
}

<!-- 3D Cube Section -->
<section class="courses">

    <div class="cube">
        <div class="face front">Python</div>
        <div class="face back">Dynamo</div>
        <div class="face right">Revit API</div>
        <div class="face left">C#</div>
        <div class="face top">WPF</div>
        <div class="face bottom">Civil 3D</div>

    </div>
    <div class="courses-content">
        <h2>Construct<span>ED</span></h2>
        <p>
            Your ultimate destination for advancing your career in the <b>AEC industry</b>. Unlock new opportunities with our expert-led <b>AEC courses</b>, designed to help you master <b>BIM, Revit, Dynamo,</b> and other essential tools. Gain hands-on experience with real-world projects and learn from industry leaders. Additionally, explore our powerful <b>Revit plugins</b> that streamline your workflows and enhance productivity. Whether you're a beginner or an experienced professional, we provide the resources and knowledge you need to excel. Start your learning journey today and take your skills to the next level!
        </p>
    </div>
</section>

<!-- Courses Section -->
<section class="courses" id="courses">
    <div class="courses-img">
        <img src="~/image/courses.png" alt="Courses">
    </div>

    <div class="courses-content">
        <h2>Our <span>Courses</span></h2>
        <p>
            Dive into our comprehensive collection of <b>AEC courses</b> designed to enhance your skills in <b>BIM, Revit, Dynamo, and more</b>. Whether you're a beginner or an advanced user, our courses cater to all levels. Learn from industry experts and gain hands-on experience with real-world projects. Start your journey today and transform your career in the AEC industry!
        </p>
        <a asp-controller="Course" asp-action="Index" class="btn">Explore Our Courses</a>
    </div>
</section>

<!-- Plugins Section -->
<section class="plugins" id="plugins">
    <div class="plugins-img">
        <img src="~/image/plugins.png" alt="Plugins">
    </div>

    <div class="plugins-content">
        <h2>Our <span>Plugins</span></h2>
        <p>
            Enhance your workflow with our powerful <b>Revit plugins</b>. From automation to advanced modeling tools, our plugins are designed to streamline your processes and boost productivity. Explore our collection of plugins, each crafted to solve specific challenges in the AEC industry. Download now and take your projects to the next level!
        </p>
        <a asp-controller="Plugin" asp-action="Index" class="btn">Discover Our Plugins</a>
    </div>
</section>