@model InstructorViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-create-container">
    <div class="admin-create">
        <h3 class="text-center mb-4">Add New Instructor</h3>

        <form asp-action="CreateInstructor" asp-controller="Admin" method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <input type="hidden" asp-for="IsInstructor" value="true" />

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control input-custom" placeholder="Enter the full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control input-custom" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control input-custom" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control input-custom" placeholder="Enter password" />
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmedPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmedPassword" type="password" class="form-control input-custom" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Bio" class="control-label"></label>
                <textarea asp-for="Bio" class="form-control input-custom"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Experience" class="control-label"></label>
                <input asp-for="Experience" class="form-control input-custom" />
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload Image</label>
                <input name="ImageFile" type="file" class="form-control input-custom" />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn-create">Add</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}