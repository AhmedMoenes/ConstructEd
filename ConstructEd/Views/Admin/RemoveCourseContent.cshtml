@model CourseContentViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-danger">Delete Course</h2>
    <p class="lead">Are you sure you want to delete this course? This action cannot be undone.</p>
    <hr />

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <dl class="row">
                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">Order</dt>
                <dd class="col-sm-9">@Model.Order</dd>
            </dl>
        </div>
    </div>

    <form asp-action="RemoveCourseContentConfirmed" asp-controller="Admin" asp-route-id="@Model.Id" class="mt-4">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </button>
        <a asp-action="CourseIndex" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </form>
</div>

@section Scripts {
            <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}