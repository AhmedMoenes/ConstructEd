@model CourseViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-danger">Delete Course</h2>
    <p class="lead">Are you sure you want to delete this course? This action cannot be undone.</p>
    <hr />

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <dl class="row">
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@Model.Duration hours</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("MM/dd/yyyy hh:mm tt")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="RemoveCourseConfirmed" asp-controller="Admin" asp-route-id="@Model.Id" class="mt-4">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </button>
        <a asp-action="CourseIndex" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </form>
</div>

@section Scripts {
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}