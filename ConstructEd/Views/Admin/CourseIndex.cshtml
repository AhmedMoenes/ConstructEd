@model IEnumerable<CourseViewModel>

@{
    ViewData["Title"] = "CourseIndex";
}

<div class="container">
    <h1 class="page-title">Courses</h1>

    <!-- Courses Table -->
    <div class="table-responsive">
        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Duration</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.Title</td>
                        <td>@course.Price.ToString("C")</td>
                        <td>@course.Duration hours</td>
                        <td>@course.Category.ToString().Replace("_", " ")</td>
                        <td>
                            <a asp-action="EditCourse" asp-controller="Admin" asp-route-id="@course.Id" class="btn-edit">Edit</a>
                            <a asp-action="RemoveCourse" asp-controller="Admin" asp-route-id="@course.Id" class="btn-remove">Remove</a>
                            <a asp-action="CourseContentDetails" asp-controller="Admin" asp-route-id="@course.Id" class="btn-edit">Contents</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <a asp-action="CreateCourse" class="btn btn-secondary-new">Add New Course</a>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>