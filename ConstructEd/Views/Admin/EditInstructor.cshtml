@model ConstructEd.ViewModels.InstructorViewModel

@{
    ViewData["Title"] = "Edit Instructor";
}

<div class="admin-create-container">
    <div class="admin-create">
        <h3 class="text-center mb-4">Edit Instructor</h3>

        <form asp-action="EditInstructor" enctype="multipart/form-data">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <!-- Hidden ID Field -->
            <input type="hidden" asp-for="Id" />

            <!-- Full Name Input -->
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control input-custom" placeholder="Enter full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Bio Input -->
            <div class="mb-3">
                <label asp-for="Bio" class="form-label">Bio</label>
                <textarea asp-for="Bio" class="form-control input-custom" placeholder="Enter bio"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <!-- Profile Picture Input -->
            <div class="mb-3">
                <label class="form-label">Upload Image</label>
                <input name="ImageFile" type="file" class="form-control input-custom" />
            </div>

            <!-- Save Button -->
            <button type="submit" class="btn-create">Save</button>

            <!-- Back to List Button -->
            <div class="text-center mt-3">
                <a asp-action="InstructorIndex" class="btn-back">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}