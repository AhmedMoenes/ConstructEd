@model ConstructEd.ViewModels.PluginViewModel

@{
    ViewData["Title"] = "Edit Plugin";
}

<div class="admin-create-container">
    <div class="admin-create">
        <h3 class="text-center mb-4">Edit Plugin</h3>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <!-- Hidden ID Field -->
            <input type="hidden" asp-for="Id" />

            <!-- Title Input -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Plugin Title</label>
                <input asp-for="Title" class="form-control input-custom" placeholder="Enter plugin title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description Input -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Plugin Description</label>
                <textarea asp-for="Description" class="form-control input-custom" placeholder="Enter plugin description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Price Input -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control input-custom" placeholder="Enter plugin price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <button type="submit" class="btn-create">Save</button>

            <!-- Back to List Button -->
            <div class="text-center mt-3">
                <a asp-action="PluginIndex" class="btn-back">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}