@model ConstructEd.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Edit Course";
    SelectList instructors = new SelectList(ViewBag.instructorList, "Id", "FullName");
    SelectList categories = new SelectList(ViewBag.categoryList);
}

<div class="admin-create-container">
    <div class="admin-create">
        <h3 class="text-center mb-4">Edit Course</h3>

        <form asp-action="EditCourse" enctype="multipart/form-data">
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <!-- Hidden ID Field -->
            <input type="hidden" asp-for="Id" />

            <!-- Title Input -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Course Title</label>
                <input asp-for="Title" class="form-control input-custom" placeholder="Enter course title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description Input -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Course Description</label>
                <textarea asp-for="Description" class="form-control input-custom" placeholder="Enter course description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Price Input -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control input-custom" placeholder="Enter course price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Duration Input -->
            <div class="mb-3">
                <label asp-for="Duration" class="form-label">Duration</label>
                <input asp-for="Duration" class="form-control input-custom" placeholder="Enter course duration" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <!-- Category Dropdown -->
            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category</label>
                <select asp-for="Category" class="form-control input-custom" asp-items="categories">
                    <option value="0">--Select Category--</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Instructor Dropdown -->
            <div class="mb-3">
                <label asp-for="UserId" class="form-label">Instructor</label>
                <select asp-for="UserId" class="form-control input-custom" asp-items="instructors">
                    <option value="0">--Select Instructor--</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <button type="submit" class="btn-create">Save</button>

            <!-- Back to List Button -->
            <div class="text-center mt-3">
                <a asp-action="CourseIndex" class="btn-back">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}