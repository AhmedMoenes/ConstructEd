@model ConstructEd.ViewModels.CourseContentViewModel

@{
    ViewData["Title"] = "Create Course Content";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SelectList contentTypes = new SelectList(ViewBag.ContentTypes);
}

<div class="admin-create-container">
    <div class="admin-create">
        <h3 class="text-center mb-4">Create Course Content</h3>

        <form asp-action="CreateCourseContent" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <input asp-for="CourseId" type="hidden" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control input-custom" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" class="form-control input-custom" asp-items="contentTypes">
                    <option value="-1">-- Select Content Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FileUrl" class="form-label"></label>
                <input asp-for="FileUrl" class="form-control input-custom" />
                <span asp-validation-for="FileUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Order" class="form-label"></label>
                <input asp-for="Order" class="form-control input-custom" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn-create">Create</button>
            </div>
        </form>

        <div class="text-center mt-4">
            <a asp-action="CourseIndex" class="btn-back">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}