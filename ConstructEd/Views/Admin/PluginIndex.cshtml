@model IEnumerable<PluginViewModel>
@{
    ViewData["Title"] = "Plugin Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Table Styling */
    .table-custom {
        background-color: #1b1535;
        color: #fff;
        border-radius: 8px;
        overflow: hidden;
    }

        .table-custom th {
            background-color: #5b4b8a;
            color: #fff;
            padding: 12px;
            text-align: left;
        }

        .table-custom td {
            padding: 12px;
            border-bottom: 1px solid #3a356b;
        }

        .table-custom tr:hover {
            background-color: #2a2753;
        }

    /* Button Styling */
    .btn-edit {
        background-color: #6f42c1;
        color: #fff;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
        transition: background 0.3s ease;
    }

        .btn-edit:hover {
            background-color: #502ea7;
        }

    .btn-remove {
        background-color: #dc3545;
        color: #fff;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
        transition: background 0.3s ease;
    }

        .btn-remove:hover {
            background-color: #a71d2a;
        }

    /* Page Title */
    .page-title {
        color: #fff;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Add Plugin Button */
    .btn-add-plugin {
        background-color: #28a745;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: background 0.3s ease;
    }

        .btn-add-plugin:hover {
            background-color: #218838;
        }
</style>

<div class="container">
    <h1 class="page-title">Plugin Index</h1>

    <!-- Add Plugin Button -->
    <div class="mb-4">
        <a asp-action="CreatePlugin" class="btn-add-plugin">Add New Plugin</a>
    </div>

    <!-- Plugins Table -->
    <div class="table-responsive">
        <table class="table table-custom">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plugin in Model)
                {
                        <tr>
                            <td>@plugin.Title</td>
                            <td>@plugin.Description</td>
                            <td>@plugin.Price.ToString("C")</td>
                            <td>
                                <a asp-action="EditPlugin" asp-route-id="@plugin.Id" class="btn-edit">Edit</a>
                                <a asp-action="RemovePlugin" asp-route-id="@plugin.Id" class="btn-remove">Remove</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
