@model IEnumerable<PluginViewModel>

@{
    ViewData["Title"] = "PluginIndex";
}

<div class="container">
    <h1 class="page-title">Plugins</h1>

    <!-- Plugins Table -->
    <div class="table-responsive">
        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plugin in Model)
                {
                    <tr>
                        <td>@plugin.Title</td>
                        <td>@plugin.Price EGP</td>
                        <td>
                            <a asp-action="EditPlugin" asp-route-id="@plugin.Id" class="btn-edit">Edit</a>
                            <a asp-action="RemovePlugin" asp-route-id="@plugin.Id" class="btn-remove">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <a asp-action="CreatePlugin" class="btn btn-secondary-new">Add New Plugin</a>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>