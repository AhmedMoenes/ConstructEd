<div class="container mt-5">
    <h1 class="page-title">Our Plugins</h1>

    <!-- Plugins Table -->
    <div class="table-responsive">
        <table class="table table-custom">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plugin in Model)
                {
                    <tr>
                        <td>@plugin.Title</td>
                        <td>@plugin.Description</td>
                        <td>@plugin.Price.ToString("C")</td>
                        <td>
                            <a asp-action="EditPlugin" asp-route-id="@plugin.Id" class="btn-edit">Edit</a>
                            <a asp-action="RemovePlugin" asp-route-id="@plugin.Id" class="btn-remove">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-center mt-4">
        <a asp-action="CreatePlugin" class="btn-add-plugin">Add New Plugin</a>
        <a asp-action="Dashboard" class="btn-add-plugin">Back To Dashboard</a>
    </div>
</div>

<style>
    body {
        background-color: #0f0e17;
    }

    .table-custom {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
        border-radius: 10px;
        overflow: hidden;
        backdrop-filter: blur(10px);
        box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.2);
    }

        .table-custom th {
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
            padding: 12px;
            text-align: left;
        }

        .table-custom td {
            padding: 12px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .table-custom tr:hover {
            background-color: rgba(255, 255, 255, 0.15);
        }

    .btn-edit, .btn-remove, .btn-add-plugin {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s ease;
    }

    .btn-edit {
        background-color: #6f42c1;
        color: white;
    }

        .btn-edit:hover {
            background-color: #502ea7;
        }

    .btn-remove {
        background-color: #dc3545;
        color: white;
    }

        .btn-remove:hover {
            background-color: #a71d2a;
        }

    .btn-add-plugin {
        background-color: #28a745;
        color: white;
    }

        .btn-add-plugin:hover {
            background-color: #218838;
        }
</style>
