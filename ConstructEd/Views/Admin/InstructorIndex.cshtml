@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "InstructorIndex";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure layout is consistent
}

<div class="container">
    <h1 class="page-title">Instructors</h1>

    <!-- Instructors Table -->
    <div class="table-responsive">
        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Bio</th>
                    <th>Experience (Years)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var instructor in Model)
                {
                    <tr>
                        <td>@instructor.FullName</td>
                        <td>@instructor.Email</td>
                        <td>@instructor.Bio</td>
                        <td>@instructor.Experience</td>
                        <td>
                            <a asp-action="EditInstructor" asp-route-id="@instructor.Id" class="btn-edit">Edit</a>
                            <a asp-action="RemoveInstructor" asp-route-id="@instructor.Id" class="btn-remove">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        <a asp-action="CreateInstructor" class="btn btn-secondary-new">Add New Instructor</a>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>