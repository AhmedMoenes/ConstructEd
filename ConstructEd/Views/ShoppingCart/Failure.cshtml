@{
    ViewData["Title"] = "Payment Failed";
}

<div class="payment-failed-container">
    <div class="payment-failed-card card">
        <h2 class="payment-failed-title">Payment Failed</h2>
        <p class="payment-failed-message">Unfortunately, your payment could not be processed. Please try again.</p>

        <div class="payment-failed-actions">
            <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-danger">Try Again</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
        </div>
    </div>
</div>