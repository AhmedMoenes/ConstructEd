@model List<PluginViewModel>
@{
	ViewData["Title"] = "Index";
}
<h2>Plugins</h2>

@{
    ViewData["Title"] = "Plugin Catalog";
}

<h1 class="mb-4">Plugin Catalog</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var plugin in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@plugin.Title</h5>
                    <p class="card-text">@plugin.Description</p>
                    <p class="card-text fw-bold text-primary">@plugin.Price.ToString("C")</p>


                   @*  @if (!string.IsNullOrEmpty(plugin.ImageUrl))
                    {
                        <img src="~/Image/@plugin.ImageUrl" class="card-img-top" alt="@plugin.Title" />
                    }

                    <td>
                        @if (!string.IsNullOrEmpty(plugin.DownloadLink))
                        {
                            <a href="~/files/@plugin.DownloadLink" download class="btn btn-sm btn-outline-primary">Download</a>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td> *@

                    <div class="mt-3 d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@plugin.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@plugin.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4 text-end">
    <a asp-action="Create" class="btn btn-primary">Create New Plugin</a>
</div>
@foreach (var plugin in Model)
{
		<div class="card" style="width:300px">
		@* <img class="card-img-top" src="/Images/@Model.ImageURL" alt="Card image"> *@
			<div class="card-body">
					<h4 class="card-title">@plugin.Title</h4>
						<p class="card-text">Price = @plugin.Price</p>
			@* Handle This *@
						<a asp-controller="Plugin" asp-action="Details" asp-route-id="@plugin.Id" class="btn btn-success">View Details</a>
			<form asp-action="AddToCart" asp-controller="ShoppingCart" method="post">
							<input type="hidden" name="id" value="@plugin.Id" />
						<input type="hidden" name="type" value="Plugin" />
						<button type="submit" class="btn btn-danger">Add To Cart</button>
						</form>
			@* تعديل الكود باي صاصا *@
			<form asp-action="AddToWish" asp-controller="WishList" method="post">
				<input type="hidden" name="id" value="@plugin.Id" />
				<input type="hidden" name="type" value="Plugin" />
				<button type="submit" class="btn btn-danger">Add To Wish List</button>
			</form>
			</div>
		</div>
}