@model ConstructEd.ViewModels.PluginViewModel

@{
    ViewData["Title"] = "Add Plugin";
}

<form asp-action="Create" asp-controller="Plugin" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter plugin title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
   @*  <div class="form-group">
        <label asp-for="DownloadLink" class="control-label"></label>
        <input asp-for="DownloadLink" type="file" class="form-control" />
        <span asp-validation-for="DownloadLink" class="text-danger"></span>
    </div> *@
    <div class="form-group">
        <div class="form-group">
            <label>Upload Image</label>
            <input name="ImageUrl" type="file" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <select asp-for="Category" asp-items="ViewBag.Categories" class="form-control">
        <option value="">-- Select Category --</option>
    </select>

                        <div class="form-group d-grid">
                            <button type="submit" class="btn btn-success btn-lg">Create</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}